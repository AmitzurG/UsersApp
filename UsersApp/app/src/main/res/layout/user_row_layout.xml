<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="16dp" android:background="@drawable/user_row_background">

    <CheckBox
        android:id="@+id/markedCheckBox"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="8dp"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/userImageView"
        android:layout_width="@dimen/user_image_size" android:layout_height="@dimen/user_image_size"
        android:contentDescription="@string/image" />

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
        android:layout_gravity="center_vertical" android:paddingStart="64dp" tools:ignore="RtlSymmetry" />
</LinearLayout>
